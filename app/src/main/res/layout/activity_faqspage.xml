<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faqspage"
    android:background="@drawable/backgrounddark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:id="@+id/image">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/faq"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#003366"
                        android:layout_weight="1"
                        android:padding="20dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_highlight_24px"
                            android:tint="@android:color/background_light"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="0dp">

                        <com.wajahatkarim3.easyflipview.EasyFlipView
                            android:id="@+id/flipview1"
                            android:layout_width="211dp"
                            android:layout_height="119dp"
                            app:flipDuration="500"
                            app:flipEnabled="true"
                            app:flipOnTouch="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="When will the event start?"
                                    android:textColor="#003366"
                                    android:textSize="25sp" />
                                <TextView
                                    android:id="@+id/ans1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:visibility="gone"
                                    android:text="The event will commence on 21st February,2018"
                                    android:textColor="#003366"
                                    android:textSize="18sp" />
                        </com.wajahatkarim3.easyflipview.EasyFlipView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#003366"
                    android:layout_weight="1"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_highlight_24px"
                        android:tint="@android:color/background_light"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:padding="0dp">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/flipview2"
                        android:layout_width="211dp"
                        android:layout_height="119dp"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Will certificates be provided?"
                            android:textColor="#003366"
                            android:textSize="23sp" />
                        <TextView
                            android:id="@+id/ans2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:visibility="gone"
                            android:text="yes,Certificates will be provided for all the events"
                            android:textColor="#003366"
                            android:textSize="18sp" />
                    </com.wajahatkarim3.easyflipview.EasyFlipView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
